
{
  "rules": {
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".write": "$uid === auth.uid",
        ".validate": "newData.hasChildren(['id', 'name', 'email', 'createdAt'])"
      }
    },
    "rooms": {
      ".read": "auth != null",
      "$roomId": {
        ".write": "!data.exists() || data.child('createdBy').val() === auth.uid",
        ".validate": "newData.hasChildren(['id', 'name', 'createdBy', 'createdAt', 'inviteCode'])"
      }
    },
    "roomMembers": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "officeSchedules": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "changeRequests": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "notifications": {
      ".read": "auth != null",
      "$notificationId": {
        ".write": "(!data.exists() && newData.child('userId').val() === auth.uid) || (data.exists() && data.child('userId').val() === auth.uid)",
        ".validate": "newData.hasChildren(['id', 'userId', 'roomId', 'type', 'message', 'read', 'createdAt'])"
      }
    }
  }
}
