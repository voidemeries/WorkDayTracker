
{
  "rules": {
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".write": "$uid === auth.uid",
        ".validate": "newData.hasChildren(['id', 'name', 'email', 'createdAt'])"
      }
    },
    "rooms": {
      ".read": "auth != null",
      "$roomId": {
        ".write": "!data.exists() || data.child('createdBy').val() === auth.uid",
        ".validate": "newData.hasChildren(['id', 'name', 'createdBy', 'createdAt', 'inviteCode'])"
      }
    },
    "roomMembers": {
      ".read": "auth != null",
      "$memberId": {
        ".write": "(!data.exists() && newData.child('userId').val() === auth.uid) || (data.exists() && data.child('userId').val() === auth.uid)",
        ".validate": "newData.hasChildren(['id', 'roomId', 'userId', 'role', 'status', 'createdAt'])"
      }
    },
    "officeSchedules": {
      ".read": "auth != null",
      "$scheduleId": {
        ".write": "(!data.exists() && newData.child('userId').val() === auth.uid) || (data.exists() && data.child('userId').val() === auth.uid)",
        ".validate": "newData.hasChildren(['id', 'roomId', 'userId', 'date', 'status', 'createdAt'])"
      }
    },
    "changeRequests": {
      ".read": "auth != null",
      "$requestId": {
        ".write": "(!data.exists() && newData.child('userId').val() === auth.uid) || (data.exists() && (data.child('userId').val() === auth.uid || newData.child('status').val() != 'pending'))",
        ".validate": "newData.hasChildren(['id', 'roomId', 'userId', 'newDate', 'status', 'createdAt'])"
      }
    },
    "notifications": {
      ".read": "auth != null",
      "$notificationId": {
        ".write": "(!data.exists() && newData.child('userId').val() === auth.uid) || (data.exists() && data.child('userId').val() === auth.uid)",
        ".validate": "newData.hasChildren(['id', 'userId', 'roomId', 'type', 'message', 'read', 'createdAt'])"
      }
    }
  }
}
